<div class="card d-flex flex-column justify-content-between" style="width: 18rem; margin-top: 16px; margin-left: 4px">
    <div>
        <img src="{{flag}}" class="card-img-top" alt="...">
    </div>
    <div>
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="d-flex flex-column align-items-center" style="margin-bottom: 10px">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{capital}}</p>
            </div>
            <div class="d-flex align-self-end">
                <a id="info-{{name}}" href="#" class="btn btn-primary btn-sm" style="margin-right: 4px">Check Forecast</a>
                <a id="like-{{name}}" href="#" class="btn btn-primary btn-sm">Add to Favorites</a>
            </div>
        </div>
    </div>

</div>