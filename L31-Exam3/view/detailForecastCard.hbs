<div class="card w-75 mx-auto" style="margin-top: 24px">
    <div class="d-flex flex-row justify-content-center" style="padding-top: 6px">
        <img src="{{flag}}" class="" alt="..." style="max-height: 50px">
        <h1 class="card-title" style="text-align: center">{{name}}</h1>
    </div>
    <div class="card-body d-flex flex-row">
        {{#each hoursData}}
            <div class="card" style="width: 14rem; margin-top: 10px; margin-left: 4px">
                <p class="card-text">{{hour}}</p>
                <hr>
                <div class="d-flex justify-content-center align-items-center">
                    <p class="card-text" style="padding-bottom: 8px">{{temp}}&deg; C</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>